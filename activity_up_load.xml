<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D2C3">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="355dp"
        android:layout_height="207dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/tasarim"
        android:onClick="SelectImage"
        app:layout_constraintBottom_toTopOf="@+id/commandText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/select" />

    <Button
        android:id="@+id/savebutton"
        android:layout_width="382dp"
        android:layout_height="59dp"
        android:background="@drawable/tasarim"
        android:gravity="center"
        android:onClick="savebutton"
        android:text="Kaydet"
        app:backgroundTint="#589890"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commandText" />

    <EditText
        android:id="@+id/commandText"
        android:layout_width="329dp"
        android:layout_height="61dp"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:gravity="center"
        android:hint="LÃ¼tfen Notunuzu  Giriniz..."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/savebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>